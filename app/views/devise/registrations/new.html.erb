<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>This is paid</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>This is free</p>
    <% end %>
  </div>
  
  <div class="col-md-6 col-md-offset-3 well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
      <% else %>
          <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>